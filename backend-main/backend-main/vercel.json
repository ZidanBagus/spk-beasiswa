{
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/login",
      "destination": "/api/login"
    },
    {
      "source": "/api/applicants/stats",
      "destination": "/api/stats"
    },
    {
      "source": "/",
      "destination": "/api/index"
    }
  ]
}